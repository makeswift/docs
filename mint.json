{
  "$schema": "https://mintlify.com/schema.json",
  "name": "Makeswift Docs",
  "logo": {
    "dark": "/images/logo.svg",
    "light": "/images/logo.svg"
  },
  "favicon": "/images/favicon.svg",
  "colors": {
    "primary": "#EA3BA7",
    "light": "#EA3BA7",
    "dark": "#EA3BA7",
