      "pages": ["quickstart", "concepts"]
    },
    {
      "group": "App Router",
      "pages": ["app-router/installation", "app-router/localization"]
    },
    {
      "group": "Pages Router",
      "pages": ["pages-router/installation", "pages-router/localization"]
    },
    {
      "group": "Reference",
      "pages": [
        {
          "group": "Components",
          "pages": [
            "reference/components/page",
            "reference/components/react-runtime-provider"
          ]
        },
        {
          "group": "Controls",
          "pages": [
            "reference/controls/checkbox",
            "reference/controls/color",
            "reference/controls/combobox",
            "reference/controls/image",
            "reference/controls/link",
            "reference/controls/list",
            "reference/controls/number",
