  "footerSocials": {
    "twitter": "https://twitter.com/makeswifthq",
    "github": "https://github.com/makeswift",
    "linkedin": "https://www.linkedin.com/company/makeswifthq"
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true,
    "raiseIssue": false
  },
  "redirects": [
    {
      "source": "/migrations/:slug*",
      "destination": "/upgrading/:slug*"
