        {
          "group": "Client",
          "pages": [
            "reference/client/constructor",
            "reference/client/get-sitemap",
            "reference/client/get-page-snapshot",
            "reference/client/get-site-version"
          ]
        },
        "reference/makeswift-api-handler",
