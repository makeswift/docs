    {
      "source": "/guides/localization",
      "destination": "/pages-router/guides/localization"
    },
    {
      "source": "/guides/extending-the-document",
      "destination": "/pages-router/installation"
    },
    {
      "source": "/guides/manual-installation",
      "destination": "/pages-router/installation"
    }
  ]
